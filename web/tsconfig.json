{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "types": ["vite/client"],
    "baseUrl": "..",
    "paths": {
      "@app/*": ["app/*"],
      "@ui/*": ["ui/*"]
    }
  },
  "include": [
    "src/**/*",
    "../app/**/*",
    "../ui/**/*"
  ],
  "exclude": [
    "../app/**/*.native.*",
    "../app/navigation/mobile/**",
    "../ui/native/**",
    "../mobile/**"
  ]
}
