{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "types": ["react"],
    "lib": ["ES2020"],
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "baseUrl": "..",
    "paths": {
      "@app/*": ["app/*"],
      "@ui/*": ["ui/*"],
      "react-native": ["mobile/node_modules/react-native"],
      "react-native/*": ["mobile/node_modules/react-native/*"],
      "@react-navigation/drawer": ["mobile/node_modules/@react-navigation/drawer"]
    }
  },
  "include": [
    "src/**/*",
    "../app/**/*",
    "../ui/**/*"
  ],
  "exclude": [
    "../app/**/*.web.*",
    "../ui/web/**",
    "../web/**"
  ]
}
